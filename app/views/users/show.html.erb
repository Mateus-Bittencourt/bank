<div class="container">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-sm-12 col-lg-6">
      <div class=" card" >
        <div class="card-body">
          <h1>Bem vindo <%= @user.full_name %></h1>
          <hr>
          <h4>Sua conta:</h4>
          <h3>Saldo: R$ <%= @user.balance %></h3>
          <div class="mt-2">
            <p>CPF: <%= @user.cpf %></p>
            <p><%= @user.email %></p>
            <p>Conta corrente: <%= @user.account_number %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-lg-6">
      <div class="card" >
        <div class="card-body">
          <h2>Transações:</h2>
          <div class="container d-flex justify-content-center mt-5">
            <div class="btn-group-vertical " role="group" aria-label="Vertical button group">
              <%= link_to "Depósito", deposit_path(current_user), class: "btn btn-dark" %>
              <%= link_to "Saque", withdraw_path(current_user), class: "btn btn-dark" %>
              <%= link_to "Transferência entre Contas", transfer_between_accounts_path(current_user), class: "btn btn-dark" %>
              <%= link_to "Solicitar Extrato", transactions_path(current_user), class: "btn btn-dark" %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
